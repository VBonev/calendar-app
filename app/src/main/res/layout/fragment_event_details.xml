<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
                name="eventDetailsFragmentVM"
                type="com.today.calendarevents.details.EventDetailsViewModel"/>
    </data>

    <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/edit_name"
            android:minWidth="300dp"
            android:orientation="vertical"
            android:layout_height="400dp"
            android:padding="10dp"
            android:layout_width="wrap_content">

        <TextView android:layout_width="match_parent"
                  android:layout_height="60dp"
                  android:textSize="25sp"
                  android:textStyle="bold"
                  android:gravity="center"
                  android:text="@{eventDetailsFragmentVM.event.name}"
                  android:id="@+id/event_name"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
            <TextView
                    android:text="@string/calendar_label"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="@{eventDetailsFragmentVM.event.calendarName}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
            <TextView
                    android:text="@string/start_date_label"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/start_time"
                    tools:text="Event name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
            <TextView
                    android:text="@string/end_date_label"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/end_time"
                    tools:text="Event name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:id="@+id/location_layout"
                android:padding="10dp"
                android:orientation="vertical">
            <TextView
                    android:text="@string/location_label"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="@{eventDetailsFragmentVM.event.location}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:id="@+id/notes_layout"
                android:padding="10dp"
                android:orientation="vertical">
            <TextView
                    android:text="@string/notes_label"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
            <TextView
                    tools:text="Event name"
                    android:text="@{eventDetailsFragmentVM.event.notes}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/attendees_container"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
            <TextView
                    android:text="@string/attendees_label"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_attendees"
            />
        </LinearLayout>

    </LinearLayout>
</layout>